{
  "openapi": "3.0.0",
  "info": {
    "title": "Mission Pizza API",
    "version": "1.0.0"
  },
  "paths": {
    "/menu": {
      "get": {
        "summary": "Get pizza menu",
        "responses": {
          "200": {
            "description": "List of pizzas"
          }
        }
      }
    },
    "/order": {
      "post": {
        "summary": "Place a pizza order",
        "requestBody": {
          "required": true
        },
        "responses": {
          "200": {
            "description": "Order confirmation"
          }
        }
      }
    },
    "/order/{order_id}": {
      "get": {
        "summary": "Track an order",
        "responses": {
          "200": {
            "description": "Order status"
          }
        }
      }
    }
  }
}
